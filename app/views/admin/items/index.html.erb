<h3>商品一覧</h3>

<%= link_to new_admin_item_path do %>
  <i class="fas fa-plus-circle"></i>
<% end %>

<% @items.each do |item| %>
  <%= item.id %>
  <%= link_to admin_item_path(item) do %>
    <%= item.name %>
  <% end %>
  <%= item.price %>
  <%= item.genre.name %>
  <% if item.is_active == true %>
    販売中
  <% else %>
    販売停止中
  <% end %>
<% end %>