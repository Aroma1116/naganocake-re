<h3>配送先編集</h3>
<%= render 'layouts/error', obj:@address %>
<%= form_with model:@address, url: address_path(@address), method: :patch do |f| %>
<table>
  <tbody>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></br></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></br></td>
    </tr>
    <tr>
      <td><%= f.label :name, "宛名" %></td>
      <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
      <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>
<% end %>