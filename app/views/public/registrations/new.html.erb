<h2>新規会員登録</h2>

<%= form_with model: @customer, url:  customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>名前</td>
        <td>
          <%= f.label :last_name, "（姓）" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </td>
        <td>
          <%= f.label :first_name, "（名）" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= f.label :last_name_kana, "（セイ）" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </td>
        <td>
          <%= f.label :first_name_kana, "（メイ）" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :email, "メールアドレス" %>
        </td>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></td>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード(６文字以上)" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </td>
        <td></td>
      </tr>
    </tbody>
  </table>

<% end %>
<h2>すでに登録済みの方</h2>
<%= render "public/shared/links" %>
